<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/tipsback">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Do's and Dont's"
        android:id="@+id/textView"
        android:textSize="50sp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textColor="#191654"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sometimes it is worth to spend items, such as beauty blenders. The inexpesnive beauty blenders are not alike the high quality ones."
        android:id="@+id/textView2"
        android:textSize="25sp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/tipsbutton"
        android:textColor="#fff"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Do your hair after your makeup, that way you can blend are your makeup into your haireline and fix your edges."
        android:id="@+id/textView3"
        android:textSize="25sp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/tipsbutton"
        android:textColor="#fff"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="If your eyes begin to water during makeup application, open your nouth and look up."
        android:id="@+id/textView4"
        android:textSize="25sp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/tipsbutton"
        android:textColor="#fff"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Blending is absolutely necessary."
        android:id="@+id/textView5"
        android:textSize="25sp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/tipsbutton"
        android:textColor="#fff"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You can apply a thin layer of concealer and set it with powder instead of purchasing an eyeshaodow base."
        android:id="@+id/textView6"
        android:textSize="25sp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/tipsbutton"
        android:textColor="#fff"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Use vaseline or oil to remove long lasting lipstick."
        android:id="@+id/textView7"
        android:textSize="25sp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/tipsbutton"
        android:textColor="#fff"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="When using matte lipstick, use vaseline to prevent chapped lips."
        android:id="@+id/textView8"
        android:textSize="25sp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/tipsbutton"
        android:textColor="#fff"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="When blending eyeshadow, hold your brush so that your hand is above your eye, not below."
        android:id="@+id/textView9"
        android:textSize="25sp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/tipsbutton"
        android:textColor="#fff"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Preglue eyelashes to avoid applying while wet, it will get messy."
        android:id="@+id/textView10"
        android:textSize="25sp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/tipsbutton"
        android:textColor="#fff"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sleeping with makeup on will cause breakouts."
        android:id="@+id/textView11"
        android:textSize="25sp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/tipsbutton"
        android:textColor="#fff"

        />


</LinearLayout>
    </ScrollView>